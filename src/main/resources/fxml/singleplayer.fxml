<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<StackPane fx:controller="com.wangalangg.tetris.controllers.SPController"
           xmlns:fx="http://javafx.com/fxml"
           stylesheets="/css/tetris.css">

    <HBox>
        <Rectangle width="24"/>
        <VBox alignment="CENTER">

            <StackPane>
                <Rectangle width="96"
                           height="100"
                           arcHeight="20"
                           arcWidth="20"
                           fill="lightgray"
                />
                <VBox alignment="CENTER">

                    <Text text="HOLD"
                          styleClass="play-font, font-25"/>

                    <StackPane>
                        <Rectangle height="60"/>
                        <ImageView fx:id="holdBlock"/>
                    </StackPane>
                </VBox>
            </StackPane>

            <Rectangle height="20"/>

            <StackPane>
                <Rectangle width="96"
                           height="96"
                           arcHeight="20"
                           arcWidth="20"
                           fill="lightgray"
                />

                <VBox alignment="CENTER">
                    <Rectangle height="8"/>

                    <StackPane>
                        <Rectangle height="29"/>
                        <Text text="LEVEL"
                              styleClass="play-font, font-25"/>
                    </StackPane>

                    <Rectangle height="13"/>

                    <StackPane>
                        <Rectangle height="29"/>
                        <Text fx:id="level"
                              styleClass="play-font, font-25"/>
                    </StackPane>

                    <Rectangle height="17"/>
                </VBox>
            </StackPane>

            <Rectangle height="20"/>

            <StackPane>
                <Rectangle width="96"
                           height="96"
                           arcHeight="20"
                           arcWidth="20"
                           fill="lightgray"
                />

                <VBox alignment="CENTER">

                    <Rectangle height="9"/>

                    <StackPane>
                        <Rectangle height="18"/>
                        <Text text="LINES LEFT"
                              styleClass="play-font, font-15"/>
                    </StackPane>

                    <Rectangle height="18"/>

                    <StackPane>
                        <Rectangle height="29"/>
                        <Text fx:id="linesLeft"
                              styleClass="play-font, font-25"/>
                    </StackPane>

                    <Rectangle height="22"/>
                </VBox>

            </StackPane>

            <Rectangle height="20"/>

            <StackPane>
                <Rectangle width="96"
                           height="96"
                           arcHeight="20"
                           arcWidth="20"
                           fill="lightgray"
                />

                <VBox alignment="CENTER">


                    <Text text="SCORE"
                          styleClass="play-font, font-25"/>

                    <StackPane>
                        <Rectangle height="55"/>
                        <Text fx:id="points"
                              styleClass="play-font, font-25"/>
                    </StackPane>
                </VBox>
            </StackPane>
        </VBox>
        <Rectangle width="24"/>

        <GridPane fx:id="tetrisGrid"
                  hgap="1"
                  vgap="1"
                  alignment="center"
                  gridLinesVisible="true"/>

        <Rectangle width="24"/>
        <StackPane>
            <VBox alignment="CENTER">

                <StackPane>
                    <Rectangle width="96"
                               height="100"
                               arcHeight="20"
                               arcWidth="20"
                               fill="lightgray"
                    />
                    <VBox alignment="CENTER">

                        <Text text="NEXT"
                              styleClass="play-font, font-25"/>

                        <StackPane>
                            <Rectangle height="60"/>
                            <ImageView fx:id="block1"/>
                        </StackPane>
                    </VBox>
                </StackPane>

                <Rectangle height="20"/>

                <VBox>
                    <StackPane>
                        <Rectangle width="96"
                                   height="384"
                                   arcHeight="20"
                                   arcWidth="20"
                                   fill="lightgray"/>
                        <VBox>
                            <StackPane>
                                <Rectangle height="96"/>
                                <ImageView fx:id="block2"/>
                            </StackPane>
                            <StackPane>
                                <Rectangle height="96"/>
                                <ImageView fx:id="block3"/>
                            </StackPane>
                            <StackPane>
                                <Rectangle height="96"/>
                                <ImageView fx:id="block4"/>
                            </StackPane>
                            <StackPane>
                                <Rectangle height="96"/>
                                <ImageView fx:id="block5"/>
                            </StackPane>
                        </VBox>
                    </StackPane>
                </VBox>

            </VBox>
            <VBox alignment="TOP_CENTER">
                <Rectangle height="30"/>
                <HBox alignment="CENTER_RIGHT">
                    <Button fx:id="menuButton"
                            text="Menu"
                            styleClass="play-font, font-25"
                            onAction="#openMenu"
                    />
                </HBox>
            </VBox>
        </StackPane>
        <Rectangle width="24"/>
    </HBox>

    <StackPane fx:id="gameOverScreen"
               visible="false">
        <ImageView>
            <Image url="/screens/light_mask.png"
                   backgroundLoading="true"
            />
        </ImageView>

        <ImageView>
            <Image url="/screens/pause_window.png"
                   backgroundLoading="true"
            />
        </ImageView>

        <VBox alignment="CENTER"
              spacing="30"
        >
            <Text text="You died :("
                  styleClass="play-font, font-25"
            />
            <Button prefWidth="200"
                    text="Play Again"
                    styleClass="play-font, font-25"
                    onAction="#playAgainFromGameOver"
            />
            <Button prefWidth="200"
                    text="Quit"
                    onAction="#quitGame"
                    styleClass="play-font, font-25"
            />
        </VBox>
    </StackPane>

    <StackPane fx:id="pauseGroup"
               visible="false">
        <ImageView>
            <Image url="/screens/light_mask.png"
                   backgroundLoading="true"
            />
        </ImageView>

        <ImageView>
            <Image url="/screens/pause_window.png"
                   backgroundLoading="true"
            />
        </ImageView>

        <VBox alignment="CENTER"
              spacing="30"
        >
            <Rectangle height="10"/>

            <Button prefWidth="200"
                    text="Resume"
                    styleClass="play-font, font-25"
                    onAction="#closeMenu"
            />

            <Button prefWidth="200"
                    text="Restart"
                    styleClass="play-font, font-25"
                    onAction="#restartGame"
            />

            <Button prefWidth="200"
                    text="Quit"
                    styleClass="play-font, font-25"
                    onAction="#quitGame"
            />
        </VBox>
    </StackPane>
</StackPane>